{
  "name": "cultures-development-kit",
	"displayName": "Cultures Development Kit",
  "description": "Language Server for Cultures maps",
  "author": "Nithanim",
  "publisher": "Nithanim",
  "license": "MIT",
  "version": "0.0.2",
  "repository": "https://github.com/Nithanim/cultures-map-development-kit",
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:cultures-ini",
    "workspaceContains:../../../GameMp.exe"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "languages": [
      {
        "id": "cultures-ini",
        "aliases": [
          "Cultures Ini"
        ],
        "filenames": [
          "map.ini",
          "strings.ini"
        ],
        "extensions": [
          ".ini",
          ".inc"
        ],
        "configuration_": "./grammar/cultures-ini.language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "cultures-ini",
        "scopeName": "source.cultures-ini",
        "path": "./syntaxes/cultures-ini.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "culures-ini.extract-c2m",
        "title": "Extract c2m"
      },
      {
        "command": "cultures-ini.package-map-external",
        "title": "Export the map to external format"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Cultures-Ini",
      "properties": {
        "languageServerExample.maxNumberOfProblems": {
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "languageServerExample.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VSCode and the languageServerExample service."
        }        
      }
    },
    "configurationDefaults": {
      "[cultures-ini]": {
        "files.encoding": "iso885915"
      }
    },
    "breakpoints": [
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "update-vscode": "node ./node_modules/vscode/bin/install",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.8",
    "typescript": "^3.2.2",
    "vscode": "^1.1.26"
  },
  "dependencies": {
    "vscode-languageclient": "^5.2.1"
  }
}
